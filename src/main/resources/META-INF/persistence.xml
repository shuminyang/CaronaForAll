<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="caronaforall" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>com.br.carona.entities.Motorista</class>
    <class>com.br.carona.entities.Usuario</class>
    <class>com.br.carona.entities.Carona</class>
    <class>com.br.carona.entities.Carro</class>
    <class>com.br.carona.entities.Passageiro</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/caronaforall"/>
      <property name="javax.persistence.jdbc.user" value="admin_carona"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="123asd"/>
    </properties>
  </persistence-unit>
</persistence>
